{
  "name": "Tapir Script",
  "scopeName": "source.tapir",
  "patterns": [
    { "include": "#comments" },
    { "include": "#import-statement" },
    { "include": "#struct-declaration" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#field-access" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.number-sign.tapir",
      "match": "#.*$"
    },
    "import-statement": {
      "match": "\\b(import)\\s+([a-zA-Z_][a-zA-Z0-9_/]*(?:\\.\\.[a-zA-Z0-9_/]*)*)\\s*;",
      "captures": {
        "1": { "name": "keyword.control.import.tapir" },
        "2": { "name": "string.unquoted.import-path.tapir" }
      }
    },
    "struct-declaration": {
      "begin": "\\b(struct)\\s+([A-Z][a-zA-Z0-9_]*)\\s*\\{",
      "beginCaptures": {
        "1": { "name": "keyword.other.struct.tapir" },
        "2": { "name": "entity.name.type.struct.tapir" }
      },
      "end": "\\}",
      "patterns": [
        { "include": "#comments" },
        {
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*:\\s*([A-Z][a-zA-Z0-9_]*|int|fix|bool)",
          "captures": {
            "1": { "name": "variable.other.member.tapir" },
            "2": { "name": "support.type.tapir" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tapir",
          "match": "\\b(if|else|loop|break|continue|return|wait|then|import)\\b"
        },
        {
          "name": "keyword.other.tapir",
          "match": "\\b(fn|extern|event|spawn|trigger|var|global|property|struct)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.tapir",
          "match": "\\b(int|fix|bool)\\b"
        },
        {
          "comment": "Struct type after colon (in declarations)",
          "match": ":\\s*([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "support.type.tapir" }
          }
        },
        {
          "comment": "Struct constructor call",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "entity.name.type.struct.tapir" }
          }
        }
      ]
    },
    "constants": {
      "name": "constant.language.tapir",
      "match": "\\b(true|false)\\b"
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.tapir",
          "match": "-?[0-9]+\\.[0-9]*"
        },
        {
          "name": "constant.numeric.integer.tapir",
          "match": "-?[0-9]+"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.tapir",
          "match": "(==|!=|>=|<=|>|<)"
        },
        {
          "name": "keyword.operator.arithmetic.tapir",
          "match": "(\\+|-|\\*|//|%%|/|%)"
        },
        {
          "name": "keyword.operator.logical.tapir",
          "match": "(\\|\\||&&)"
        },
        {
          "name": "keyword.operator.assignment.tapir",
          "match": "="
        },
        {
          "name": "keyword.operator.arrow.tapir",
          "match": "->"
        },
        {
          "name": "keyword.operator.accessor.tapir",
          "match": "\\."
        }
      ]
    },
    "functions": {
      "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*\\(",
      "captures": {
        "1": { "name": "entity.name.function.tapir" }
      }
    },
    "field-access": {
      "match": "\\.([a-z_][a-zA-Z0-9_]*)\\b",
      "captures": {
        "1": { "name": "variable.other.member.tapir" }
      }
    },
    "identifiers": {
      "name": "variable.other.tapir",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    }
  }
}
