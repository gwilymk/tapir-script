{
  "name": "tapir-script",
  "displayName": "Tapir Script",
  "description": "Language support for Tapir Script",
  "version": "0.0.1",
  "publisher": "tapir",
  "repository": "https://github.com/gwilymk/tapir-script",
  "license": "MPL-2.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tapir",
        "aliases": [
          "Tapir Script",
          "tapir"
        ],
        "extensions": [
          ".tapir"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tapir",
        "scopeName": "source.tapir",
        "path": "./syntaxes/tapir.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "tapir.restartServer",
        "title": "Tapir: Restart Language Server"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Tapir Script",
      "properties": {
        "tapir.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the tapirc executable. If empty, searches in PATH."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "compile": "tsc -p ./",
    "bundle": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.0.0"
  }
}