# Tests for division operators: / (floor) vs // (truncating)
# Note: There's a known bug where / behaves like // for negative divisors
extern fn assert(value: bool);

# Positive division - both should give same result
assert(15 / 3 == 5);
assert(15 // 3 == 5);
assert(17 / 3 == 5);
assert(17 // 3 == 5);

# Negative dividend - / gives floor, // gives truncating
assert((0 - 7) / 4 == 0 - 2);   # floor(-1.75) = -2
assert((0 - 7) // 4 == 0 - 1);  # trunc(-1.75) = -1

# More negative dividend cases
assert((0 - 15) / 3 == 0 - 5);
assert((0 - 15) // 3 == 0 - 5);
assert((0 - 17) / 3 == 0 - 6);  # floor(-5.67) = -6
assert((0 - 17) // 3 == 0 - 5); # trunc(-5.67) = -5

# Division by 1
assert(42 / 1 == 42);
assert(42 // 1 == 42);
assert((0 - 42) / 1 == 0 - 42);
assert((0 - 42) // 1 == 0 - 42);

# Zero divided by anything
assert(0 / 5 == 0);
assert(0 // 5 == 0);

# Fix division (true division)
var f1 = 7.0 / 2.0;
assert(f1 == 3.5);

var f2 = (0.0 - 7.0) / 2.0;
assert(f2 == 0.0 - 3.5);

# Large values
assert(1000 / 7 == 142);
assert(1000 // 7 == 142);
assert((0 - 1000) / 7 == 0 - 143);
assert((0 - 1000) // 7 == 0 - 142);
