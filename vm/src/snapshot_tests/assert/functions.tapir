extern fn assert(value: bool);

fn add(a: int, b: int) -> int {
    return a + b;
}

fn factorial(n: int) -> int {
    if n <= 1 {
        return 1;
    }
    return n * factorial(n - 1);
}

assert(add(2, 3) == 5);
assert(add(0, 0) == 0);
assert(add(0 - 1, 1) == 0);

assert(factorial(0) == 1);
assert(factorial(1) == 1);
assert(factorial(5) == 120);
