extern fn assert(value: bool);

# sqrt
assert(sqrt(4.0) == 2.0);
assert(sqrt(9.0) == 3.0);
assert(sqrt(16.0) == 4.0);
assert(sqrt(0.0) == 0.0);
assert(sqrt(1.0) == 1.0);

# sin and cos at key points
# In tapir, 0..1 maps to a full circle (0 to 2*pi)
# sin(0) = 0, cos(0) = 1
# sin(0.25) = 1, cos(0.25) = 0  (90 degrees)
# sin(0.5) = 0, cos(0.5) = -1  (180 degrees)
# sin(0.75) = -1, cos(0.75) = 0  (270 degrees)

# At 0 (0 degrees)
assert(sin(0.0) == 0.0);
assert(cos(0.0) == 1.0);

# At 0.25 (90 degrees)
var s25 = sin(0.25);
var c25 = cos(0.25);
assert(s25 > 0.99 && s25 < 1.01);
assert(c25 > 0.0 - 0.01 && c25 < 0.01);

# At 0.5 (180 degrees)
var s50 = sin(0.5);
var c50 = cos(0.5);
assert(s50 > 0.0 - 0.01 && s50 < 0.01);
assert(c50 > 0.0 - 1.01 && c50 < 0.0 - 0.99);

# At 0.75 (270 degrees)
var s75 = sin(0.75);
var c75 = cos(0.75);
assert(s75 > 0.0 - 1.01 && s75 < 0.0 - 0.99);
assert(c75 > 0.0 - 0.01 && c75 < 0.01);

# frame() - should start at 0
assert(frame() == 0);
