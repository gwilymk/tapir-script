property result: int;

# Test wait 0 is no-op
var f1 = frame();
wait 0;
result = frame() - f1;  # Should be 0

wait;

# Test wait 1 same as wait
var f2 = frame();
wait 1;
result = frame() - f2;  # Should be 1

wait;

# Test wait N
var start = frame();
wait 5;
result = frame() - start;  # Should be 5

wait;

# Test wait with variable
var n = 3;
start = frame();
wait n;
result = frame() - start;  # Should be 3

wait;

# Test wait with expression
n = 2;
start = frame();
wait n + 3;
result = frame() - start;  # Should be 5

wait;

# Test negative wait is no-op
start = frame();
wait 0 - 10;
result = frame() - start;  # Should be 0
